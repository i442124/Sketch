@inherits SKColorComponent
<div class="sk-color-wrapper">
    <div class="sk-color-container"
         @onclick="OnClickAsync">

        <div class="sk-color-border"
             style="background-color: @Shade.ToHexString()">

            <div class="sk-color"
                 style="background-color: @Color.ToHexString()">

            </div>
        </div>
    </div>
</div>

@code{

    private async Task OnClickAsync()
    {
        await ColorSelected.InvokeAsync(Color);
    }
}