@inherits SKChannelComponent

<div class="container-fluid">
    <div class="row p-3">
        <div class="form-group">
            <h4>Group:</h4>
            <select @onchange="OnSelectionChanged">
                <option value="" selected disabled hidden>None</option>
                <option value="abc">Group 1</option>
                <option value="123">Group 2</option>
                <option value="def">Group 3</option>
                <option value="456">Group 4</option>
            </select>
        </div>
    </div>
</div>

@code{

    private Task OnSelectionChanged(ChangeEventArgs e)
    {
        return Subscription.SubscribeAsync((string)e.Value);
    }
}