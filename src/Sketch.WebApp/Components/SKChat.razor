@inherits SKChatComponent

<h4>Chat:</h4>
<div class="form-group">
    <label>Name:</label>
    <input class="form-control" @bind="Name" />
</div>

<div class="form-group">
    <label>Contents:</label>
    <input class="form-control" @bind="Contents"/>
</div>

<div class="form-group">
    <button class="btn btn-primary" @onclick="OnClickAsync">Send</button>
</div>

<ul>
    @foreach(var message in Messages)
    {
        <li>@message.Name: @message.Contents</li>
    }
</ul>

@code{

    [Parameter]
    public string Name { get; set; }

    [Parameter]
    public string Contents { get; set; }

    private async Task OnClickAsync(MouseEventArgs e)
    {
        await SendAsync(new Message { Name = Name, Contents = Contents });
        Contents = string.Empty;
    }
}