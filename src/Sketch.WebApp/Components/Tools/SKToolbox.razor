@namespace Sketch.WebApp.Components

<div class="container-fluid">
    <div class="row">
        <div class="col p-0">

            <h4>Modes:</h4>
            <div class="row">
                <div class="col-auto pr-1">
                    <SKBrushButton />
                </div>
                <div class="col-auto pr-1">
                    <SKEraserButton />
                </div>
                <div class="col-auto pr-1">
                    <SKBucketButton />
                </div>
                <div class="col-auto pr-1">
                    <SKTrashBin />
                </div>
                <div class="col-auto pr-1">
                    <SKUndo />
                </div>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col p-0">

            <h4>Thickness:</h4>
            <SKSizeSlider MinValue="1" MaxValue="35" />

        </div>
    </div>
    <div class="row">
        <div class="col p-0">

            <h4>Color:</h4>
            <SKColorPicker Colorants="Colorants" Tints="2" Shades="2" />

        </div>
    </div>
</div>

@code {

    private readonly ReadOnlyCollection<Color> Colorants
    = new ReadOnlyCollection<Color>(new List<Color>
    {
        Colors.Grey,
        Colors.Red,
        Colors.Orange,
        Colors.Yellow,
        Colors.Green,
        Colors.Turquoise,
        Colors.Aqua,
        Colors.Blue,
        Colors.Purple,
        Colors.Pink,
        Colors.Beige,
        Colors.Brown
    });

}