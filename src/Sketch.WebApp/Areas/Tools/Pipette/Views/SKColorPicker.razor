@inherits SKColorPickerComponent
@namespace Sketch.WebApp.Areas.Tools

<div class="sk-color-picker">
    @foreach (var color in Colorants)
    {
        <div class="sk-color-picker-list">
            @foreach (var mixture in GetColorPallette(color))
            {
                <SKColor Color="mixture"
                         ColorSelected="SetPippeteColorAsync">
                </SKColor>
            }
        </div>
    }
</div>